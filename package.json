{
  "name": "html-tailwind-javascript",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "color": "bun run tailwind-color-generator.ts",
    "build:ts": "bun run build.ts",
    "build:css": "tailwindcss -i ./src/globals.css -o ./dist/globals.min.css --minify",
    "build": "bun run build:ts && bun run build:css",
    "watch:ts": "bun run build.ts --watch",
    "watch:css": "tailwindcss -i ./src/globals.css -o ./dist/globals.css --watch",
    "serve": "bun run build && serve dist",
    "dev": "concurrently \"bun run app.ts\" \"bun run watch:css\" \"bun run watch:ts\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.15"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "hono": "^4.6.10",
    "motion": "^11.11.17",
    "serve": "^14.2.4"
  }
}
